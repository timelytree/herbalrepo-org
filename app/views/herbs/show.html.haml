.wrapper#herbPAGE
  = render 'layouts/adminTOOLBAR'
  = render 'layouts/loginFORM'
  = render 'herbs/editHerbPANEL'
  = render 'herbs/newHerbPANEL'
  .console
    %img{src: '../images/icons/close_icon_black.svg', id: 'closeB'}
    = render 'pages/about'
    = render 'pages/contact'
    = render 'layouts/nav'
    = render 'herbs/herbsList'
    #rightPANEL.flex-c
      %img{src: '../images/icons/close_icon_black.svg', id: 'herbPanelCloseB'}
      - if logged_in?
        #editHerbB Edit Herb
      #herbPANEL{data:{categories:@herb.categories.ids}}
        %section
          #herbNAME= @herb.name
          #herbLatinNAME= @herb.latin_name
        %section#description
          .subtitle Description & Research
          %div= markdown(@herb.information)
    %img{src: '../images/logo.png', id: 'logo'}
