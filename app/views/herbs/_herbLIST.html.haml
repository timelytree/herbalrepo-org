#herbLIST
  = render 'shared/search'
  %ul.list
    - @herbs.each_with_index do |herb|
      - if herb.draft_status == 'live'
        %li.herbITEM
          %a{href: "/herbs/#{herb.slug}"}
            .herbIMG{data:{original:"../uploads/#{herb.thumbnail}"}}
            .herbItemINFO
              %p.herbName= herb.name
              %p.herbLatinName= herb.latin_name
