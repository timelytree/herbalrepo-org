.wrapper#adminShowUserHerbs
  .console
    = render 'admin/nav'
    .toolbar
      .header USER'S HERBS
      %input{id: 'searchBAR', class: 'search', type: 'text', autocomplete: :off, placeholder: 'search for an herb...'}
      %a{class: 'toolbarB', href: '/admin/herb/new'} New Herb
    .content
      #userProfile
        - if @user.avatar
          %img{src: '#', id: 'userAvatar'}
        - else
          %img{src: "#{public_path}/images/userPlaceholder.png", id: 'userAvatar'}
        %h5= @user.name
        %p= @user.username
      = render 'admin/herbLIST'
